---
import CardLaunch from "./CardLaunch.astro";
import { getLastLaunches } from "../services/spacex";


const launches =  await getLastLaunches();
---


<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {launches.map(({id, links, details, flight_number: flightNumber, success}) => (
            <CardLaunch 
                id={id}
                img={links.patch.small}
                details={details}
                flightNumber={flightNumber}
                success={success}
            />
        ))}
</div>